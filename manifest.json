{
  "name": "Readable Wikipedia",
  "version": "1.4.2",
  "description": "Applies some basic typographic rules on Wikipedia articles, to make them easier on the eyes and more readable.",
  "content_scripts": [
    {
      "matches": ["http://*.wikipedia.org/*", "https://*.wikipedia.org/*"],
      "css": ["wiki.css"],
      "js": ["zepto.min.js", "wiki.js"]
    }
  ],
  "web_accessible_resources": [
   "DroidSerif-Regular-webfont.woff",
   "DroidSerif-Bold-webfont.woff",
   "DroidSerif-Italic-webfont.woff",
   "DroidSerif-BoldItalic-webfont.woff"
   ],
  "icons": { "16": "16.png",
          "48": "48.png",
          "128": "128.png" },
  "manifest_version": 2
}
